<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= file.name || 'Untitled File' %> â€¢ Secure Checkout</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

  <style>
    :root {
      --primary-blue: #007bff;
      --primary-dark-blue: #0056b3;
      --accent-green: #28a745;
      --light-bg: #f8faff;
      --card-bg: #ffffff;
      --text-dark: #333;
      --text-medium: #555;
      --text-light: #777;
      --shadow-light: rgba(0,0,0,0.08);
      --shadow-medium: rgba(0,0,0,0.15);
    }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, var(--light-bg), #e0f2f7);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow-x: hidden;
    }

    .bg-accent {
      position: absolute;
      width: 280px;
      height: 280px;
      border-radius: 50%;
      opacity: 0.1;
      filter: blur(80px);
      z-index: 0;
    }

    .bg-one { top: -120px; right: -120px; background: #a3d5ff; }
    .bg-two { bottom: -120px; left: -120px; background: #ffd6a5; }

    .checkout-card {
      position: relative;
      z-index: 1;
      max-width: 1000px;
      width: 100%;
      margin: 40px 20px;
      background: var(--card-bg);
      border-radius: 25px;
      padding: 50px;
      box-shadow: 0 12px 40px var(--shadow-medium);
      transition: transform 0.5s ease-out, box-shadow 0.3s ease;
    }

    .checkout-card:hover {
      box-shadow: 0 16px 50px var(--shadow-medium);
    }

    .pdf-preview {
      width: 100%;
      border-radius: 18px;
      box-shadow: 0 8px 25px var(--shadow-light);
      transition: transform 0.3s ease;
    }

    .pdf-preview:hover {
      transform: scale(1.02);
    }

    .headline {
      font-size: 2.4rem;
      font-weight: 700;
      margin-bottom: 12px;
      color: var(--text-dark);
      line-height: 1.2;
    }

    .subtext {
      font-size: 1.1rem;
      color: var(--text-medium);
      margin-bottom: 25px;
    }

    .story {
      background: #e6f7ff;
      padding: 18px;
      border-radius: 12px;
      font-size: 1rem;
      color: var(--text-dark);
      margin-bottom: 30px;
      display: flex;
      align-items: center;
      gap: 12px;
      border-left: 5px solid var(--primary-blue);
    }

    .story i {
      color: var(--primary-blue);
      font-size: 1.3rem;
    }

    .file-details {
      padding-left: 20px;
      margin-bottom: 30px;
    }

    .file-details li {
      margin-bottom: 10px;
      color: var(--text-medium);
      font-size: 1rem;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .file-details i {
      color: var(--primary-blue);
      font-size: 1.1rem;
    }

    .price-section {
      display: flex;
      align-items: baseline;
      margin: 25px 0;
    }

    .price-section .old-price {
      text-decoration: line-through;
      color: var(--text-light);
      font-size: 1.3rem;
      margin-right: 15px;
      font-weight: 500;
    }

    .price-section .price {
      font-size: 3rem;
      font-weight: 700;
      color: var(--accent-green);
      animation: pulsePrice 1.5s infinite alternate;
    }

    @keyframes pulsePrice {
      from { transform: scale(1); opacity: 1; }
      to { transform: scale(1.03); opacity: 0.95; }
    }

    .btn-purchase {
      width: 100%;
      padding: 16px;
      font-size: 1.3rem;
      font-weight: 600;
      background-color: var(--primary-blue);
      color: white;
      border: none;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 123, 255, 0.3);
      transition: background-color .3s ease, transform .2s ease, box-shadow .3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    .btn-purchase:hover {
      background-color: var(--primary-dark-blue);
      transform: translateY(-3px);
      box-shadow: 0 12px 25px rgba(0, 123, 255, 0.4);
    }

    .btn-purchase i {
      font-size: 1.4rem;
    }

    .btn-spinner {
      display: inline-block;
      vertical-align: middle;
      margin-left: 10px;
    }

    .spinner {
      width: 22px;
      height: 22px;
      border: 3px solid #fff;
      border-top: 3px solid #007bff;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      display: inline-block;
    }

    @keyframes spin {
      0% { transform: rotate(0deg);}
      100% { transform: rotate(360deg);}
    }

    .gift-note {
      text-align: center;
      font-size: 1rem;
      color: var(--primary-blue);
      margin-top: 15px;
      font-weight: 500;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .gift-note i {
      color: #ffc107;
      font-size: 1.1rem;
    }

    .trust-features {
      margin-top: 40px;
      font-size: 0.95rem;
      color: var(--text-light);
      text-align: center;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .trust-features span {
      display: flex;
      align-items: center;
      gap: 8px;
      font-weight: 500;
      transition: transform 0.2s;
    }

    .trust-features span:hover {
      transform: scale(1.08);
      color: var(--accent-green);
    }

    .trust-features i {
      color: var(--accent-green);
      font-size: 1.1rem;
    }

    .legal-note {
      margin-top: 20px;
      font-size: 0.8rem;
      color: var(--text-light);
      text-align: center;
    }

    .file-description {
      background: #f4f8fb;
      border-left: 4px solid var(--primary-blue);
      padding: 16px;
      border-radius: 10px;
      color: var(--text-dark);
      margin-bottom: 24px;
      font-size: 1.05rem;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .file-description i {
      color: var(--primary-blue);
    }

    .ratings {
      margin-bottom: 24px;
    }

    .ratings .stars {
      color: #ffc107;
      font-size: 1.2rem;
    }

    .ratings .stars i {
      color: #ffc107;
      margin-right: 2px;
    }
    .ratings .review-count {
      color: var(--text-light);
      margin-left: 8px;
      font-size: 0.95rem;
    }

    .faq-section {
      background: #f8faff;
      border-radius: 10px;
      padding: 18px;
      margin-top: 30px;
      font-size: 0.98rem;
    }
    .faq-section h5 {
      font-size: 1.1rem;
      margin-bottom: 10px;
      color: var(--primary-blue);
    }
    .faq-section ul {
      padding-left: 18px;
      margin-bottom: 0;
    }
    .faq-section li {
      margin-bottom: 7px;
    }

    @media (max-width: 992px) {
      .checkout-card { padding: 35px; }
      .headline { font-size: 2.1rem; }
      .price-section .price { font-size: 2.5rem; }
    }

    @media (max-width: 768px) {
      .checkout-card { padding: 30px; margin: 30px 16px; }
      .headline { font-size: 1.9rem; }
      .subtext { font-size: 1rem; }
      .story { padding: 15px; font-size: 0.9rem; }
      .price-section .price { font-size: 2.2rem; }
      .btn-purchase { font-size: 1.2rem; }
      .trust-features { flex-direction: column; gap: 10px; }
    }

    @media (max-width: 576px) {
      .checkout-card { padding: 25px; margin: 20px 10px; border-radius: 18px; }
      .headline { font-size: 1.7rem; text-align: center; }
      .subtext { font-size: 0.95rem; text-align: center; }
      .story { font-size: 0.85rem; justify-content: center; text-align: center; }
      .file-details { padding-left: 0; }
    }

    /* Brand/Logo Section */
    .brand-header {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 18px;
    }

    .brand-logo {
      width: 56px;
      height: 56px;
      object-fit: contain;
      margin-bottom: 6px;
      border-radius: 12px;
      box-shadow: 0 2px 8px var(--shadow-light);
      background: #fff;
    }

    .brand-name {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary-blue);
      letter-spacing: 1px;
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body>
  <div class="bg-accent bg-one"></div>
  <div class="bg-accent bg-two"></div>

  <div class="checkout-card">
    <!-- Brand/Logo Section -->
    <div class="brand-header mb-4">
      <span class="brand-name">PDF Store</span>
    </div>

    <% if (previewUrl) { %>
      <img class="pdf-preview mb-4" src="<%= previewUrl %>" alt="PDF Preview">
    <% } %>

    <h1 class="headline"><%= file.filename || 'Untitled File' %></h1>
    <p class="subtext">Secure download and checkout for your selected document</p>

    <div class="story">
      <i class="fas fa-lock"></i>
      Your file is protected and will be available instantly after purchase.
    </div>

    <ul class="file-details">
      <li><i class="fas fa-file-pdf"></i> Type: PDF</li>
      <li><i class="fas fa-clock"></i> Uploaded: <%= file.uploadedAt ? new Date(file.uploadedAt).toLocaleDateString() : 'N/A' %></li>
      <li><i class="fas fa-user"></i> Seller: <%= file.user || 'Admin' %></li>
      <li><i class="fas fa-database"></i> Size: <%= file.size ? (file.size/1024).toFixed(2) + ' KB' : 'N/A' %></li>
      <li><i class="fas fa-download"></i> Downloads: <%= file.downloads || 0 %></li>
    </ul>

    <% if (file.filedescription) { %>
      <div class="file-description mb-4">
        <i class="fas fa-info-circle"></i>
        <%= file.filedescription %>
      </div>
    <% } %>
    <div class="ratings mb-3">
      <span class="stars">
        <i class="fas fa-star"></i><i class="fas fa-star"></i>
        <i class="fas fa-star"></i><i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i>
      </span>
      <span class="review-count">(120 reviews)</span>
    </div>

    <div class="price-section">
      <% if (file.originalPrice && file.originalPrice > file.price) { %>
        <span class="old-price">â‚¹<%= file.originalPrice %></span>
      <% } %>
      <span class="price">â‚¹<%= file.price %></span>
    </div>

    <!-- Razorpay Button -->
    <button id="rzp-button" class="btn-purchase" type="button">
      <span class="btn-text"><i class="fas fa-shopping-cart"></i> Buy Now</span>
      <span class="btn-spinner" style="display:none;">
        <span class="spinner"></span>
      </span>
    </button>

    <div class="gift-note">
      <i class="fas fa-gift"></i> include 5 pages of free content
    </div>

    <div class="ratings mb-3">
      <span class="stars">
        <i class="fas fa-star"></i><i class="fas fa-star"></i>
        <i class="fas fa-star"></i><i class="fas fa-star"></i>
        <i class="fas fa-star-half-alt"></i>
      </span>
      <span class="review-count">(120 reviews)</span>
    </div>

    <div class="trust-features mt-4">
      <span><i class="fas fa-shield-alt"></i> Secure Payment</span>
      <span><i class="fas fa-sync-alt"></i> Instant Download</span>
      <span><i class="fas fa-thumbs-up"></i> Trusted Seller</span>
    </div>

    <div class="legal-note mt-3">
      This file is subject to copyright. Redistribution is strictly prohibited.
    </div>

    <div class="faq-section mt-4">
      <h5>Frequently Asked Questions</h5>
      <ul>
        <li><b>How do I receive my file?</b> Instantly after payment, a download link will be provided.</li>
        <li><b>Is my payment secure?</b> Yes, all payments are processed via Razorpayâ€™s secure gateway.</li>
        <li><b>Can I get a refund?</b> Please read our refund policy before purchase.</li>
      </ul>
    </div>
  </div>

  <!-- Razorpay Script -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    document.getElementById('rzp-button').onclick = function(e) {
      e.preventDefault();
      fetch('/create-order', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          fileId: "<%= file._id %>",
          filename: "<%= file.filename %>",
          price: <%= file.price %>
        })
      })
      .then(res => res.json())
      .then(order => {
        var options = {
          key: "<%= razorpayKey %>",
          amount: order.amount,
          currency: order.currency,
          name: "<%= file.filename %>",
          order_id: order.id, // <-- THIS IS REQUIRED!
          handler: function (response) {
            // Now you'll get all three: order_id, payment_id, signature
            fetch('/verify-payment', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                razorpay_order_id: response.razorpay_order_id,
                razorpay_payment_id: response.razorpay_payment_id,
                razorpay_signature: response.razorpay_signature,
                fileId: "<%= file._id %>"
              })
            })
            .then(res => res.json())
            .then(data => {
              if (data.success) {
                triggerDownload("<%= file._id %>", response.razorpay_payment_id);
              } else {
                alert("Payment verification failed.");
              }
            });
          }
          // ...other options...
        };
        var rzp1 = new Razorpay(options);
        rzp1.open();
      });
    }

    function triggerDownload(fileId, paymentId) {
      // Create a form dynamically
      var form = document.createElement('form');
      form.method = 'POST';
      form.action = '/download-pdf';
      form.style.display = 'none';

      var fileInput = document.createElement('input');
      fileInput.name = 'fileId';
      fileInput.value = fileId;
      form.appendChild(fileInput);

      var paymentInput = document.createElement('input');
      paymentInput.name = 'paymentId';
      paymentInput.value = paymentId;
      form.appendChild(paymentInput);

      document.body.appendChild(form);
      form.submit();
    }
  </script>
</body>
</html>
