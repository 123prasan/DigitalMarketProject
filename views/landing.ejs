    <script>
        // --- Feather Icons Initialization ---
        // This script finds elements with `data-feather` attributes and replaces them with SVG icons.
        // It's a lightweight way to add icons.
        const featherScript = document.createElement('script');
        featherScript.src = 'https://unpkg.com/feather-icons';
        document.head.appendChild(featherScript);
        featherScript.onload = () => {
            feather.replace();
        }

        // --- Scroll Animation Logic ---
        // I've used a 'data-animation' attribute to mark elements for animation,
        // keeping the class names unique for styling purposes.
        const animatedElements = document.querySelectorAll('[data-animation="fade-in"]');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });
        animatedElements.forEach(el => { observer.observe(el); });

        // --- FAQ Accordion Logic ---
        // I've used 'data-faq' attributes to hook into the JS, allowing
        // class names to be purely for styling, as requested.
        const faqItems = document.querySelectorAll('[data-faq="item"]');
        faqItems.forEach(item => {
            const question = item.querySelector('[data-faq="question"]');
            const answer = item.querySelector('[data-faq="answer"]');
            const answerParagraph = answer.querySelector('p');

            question.addEventListener('click', () => {
                const isActive = item.classList.contains('active');

                // Close all other items first for a clean accordion effect
                faqItems.forEach(otherItem => {
                    otherItem.classList.remove('active');
                    otherItem.querySelector('[data-faq="answer"]').style.maxHeight = null;
                });

                // Open the clicked item if it wasn't already active
                if (!isActive) {
                    item.classList.add('active');
                    // Calculate the required height including padding
                    answer.style.maxHeight = answerParagraph.scrollHeight + 40 + "px"; 
                }
            });
        });
    </script>
