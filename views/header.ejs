<body 
    data-is-loggedin="<%= isLoggedin %>" 
    data-username="<%= typeof username !== 'undefined' ? username : 'Guest' %>" 
    data-useremail="<%= typeof useremail !== 'undefined' ? useremail : '' %>" 
    data-profile-url="<%= typeof profileUrl !== 'undefined' && profileUrl ? profileUrl : '/images/avatar.jpg' %>"
>

<header class="site-header">
    <div class="container-fluid d-flex align-items-center justify-content-between">
        
        <a href="/" class="d-flex align-items: center gap-3 text-decoration-none">
            <img src="/images/logo.svg" alt="Vidyari Logo" class="brand-logo">
            <span class="brand-name">Vidyari</span>
        </a>

        <nav class="main-nav d-none d-lg-flex">
            <a href="/" class="active">Home</a>
            <a href="/documents">Documents</a>
            <a href="/courses">Courses</a>
        </nav>
        
        <div class="d-flex align-items-center header-actions">

            <button id="becomeSellerBtn" class="vidyari-header-become-seller-button">Become Seller</button>
            
            <div id="loginContainer">
                <button id="loginBtn" class="vidyari-fancy-login-button">Login</button>
            </div>
              
            <% if(isLoggedin) { %>
                <button onclick="window.location.href='/user-notifications'" id="notificationBellBtn" type="button" class="header-btn" aria-label="Notifications">
                    <i class="fa-regular fa-bell"></i>
                </button>

                <div class="position-relative" id="grip-container">
                    <button id="grip-button" type="button" class="header-btn" aria-label="Apps">
                        <i class="fas fa-grip"></i>
                    </button>
                    <div class="apps-dropdown" id="grip-menu">
                        <div class="apps-grid">
                            <a href="/dashboard" class="app-item">
                                <div class="app-icon-wrapper dashboard"><i class="fas fa-table-columns"></i></div>
                                <span class="app-label">Dashboard</span>
                            </a>
                            <a href="/downloads" class="app-item">
                                <div class="app-icon-wrapper downloads"><i class="fas fa-cloud-arrow-down"></i></div>
                                <span class="app-label">Downloads</span>
                            </a>
                            <a href="/transactions" class="app-item">
                                <div class="app-icon-wrapper transactions"><i class="fas fa-receipt"></i></div>
                                <span class="app-label">Transactions</span>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>

            <div onclick="window.location.href='/user-profile'" id="userProfile" class="dropdown">
                <img src="/images/avatar.jpg" alt="User Avatar" class="user-avatar" id="userAvatar" data-bs-toggle="dropdown" aria-expanded="false">
                <ul class="dropdown-menu dropdown-menu-end">
                    <li class="px-3 pt-2 pb-3 border-bottom">
                        <p class="fw-bold mb-0 text-white" id="dropdownUsername"></p>
                        <p class="small text-muted mb-0" id="dropdownUserEmail"></p>
                    </li>
                    <li><a class="dropdown-item" href="/user-profile"><i class="fa-solid fa-user-gear fa-fw me-2"></i>Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket fa-fw me-2"></i>Logout</a></li>
                </ul>
            </div>

            <button class="hamburger-btn d-lg-none" id="hamburgerBtn" type="button" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>

<div class="mobile-nav-panel" id="mobileNavPanel">
    
    </div>
<div class="nav-overlay" id="navOverlay"></div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
<script defer>
document.addEventListener('DOMContentLoaded', () => {

    const userData = document.body.dataset;
    const isLoggedIn = userData.isLoggedin === 'true';

    const loginContainer = document.getElementById('loginContainer');
    const userProfile = document.getElementById('userProfile');
    const mobileNavPanel = document.getElementById('mobileNavPanel');
    const navOverlay = document.getElementById('navOverlay');
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    
    // RESTORED: Grip Menu elements
    const gripContainer = document.getElementById('grip-container');
    const gripButton = document.getElementById('grip-button');
    const gripMenu = document.getElementById('grip-menu');
    
    function updateUserUI() {
        if (isLoggedIn) {
            loginContainer.style.display = 'none';
            userProfile.style.display = 'block';
            gripContainer.style.display = 'block'; // Show grip menu
            document.getElementById('userAvatar').src = userData.profileUrl;
            document.getElementById('dropdownUsername').textContent = userData.username;
            document.getElementById('dropdownUserEmail').textContent = userData.useremail;
        } else {
            loginContainer.style.display = 'block';
            userProfile.style.display = 'none';
            gripContainer.style.display = 'none'; // Hide grip menu
        }
    }

    function populateMobileNav() {
        const navLinks = [
            { href: '/', icon: 'fa-solid fa-house', text: 'Home', iconClass: 'icon-home' },
            { href: '/documents', icon: 'fa-solid fa-file-lines', text: 'Documents', iconClass: 'icon-docs' },
            { href: '/courses', icon: 'fa-solid fa-book-open-reader', text: 'Courses', iconClass: 'icon-courses' },
        ];
        const accountLinks = [
            { href: '/dashboard', icon: 'fa-solid fa-table-columns', text: 'Dashboard', iconClass: 'icon-dashboard' },
            { href: '/downloads', icon: 'fa-solid fa-cloud-arrow-down', text: 'Downloads', iconClass: 'icon-downloads' },
            { href: '/transactions', icon: 'fa-solid fa-receipt', text: 'Transactions', iconClass: 'icon-trans' },
        ];

        const createLinksHTML = (links) => links.map(link => `
            <a href="${link.href}" class="panel-link">
                <span class="icon-wrapper ${link.iconClass}"><i class="${link.icon}"></i></span>
                <span>${link.text}</span>
            </a>`).join('');

        let userSection = isLoggedIn ? `
            <a href="/user-profile" class="text-decoration-none">
                <div class="panel-user-profile">
                    <img src="${userData.profileUrl}" alt="User Avatar" class="avatar">
                    <div>
                        <p class="username text-white mb-0">${userData.username}</p>
                        <p class="email small text-muted mb-0">${userData.useremail}</p>
                    </div>
                </div>
            </a>` : '';
        
        let footerSection = isLoggedIn ? 
            `<a href="/logout" class="btn panel-link w-100 justify-content-center" style="background-color: var(--color-danger);"><i class="fa-solid fa-arrow-right-from-bracket fa-fw"></i><span>Logout</span></a>` : 
            `<button id="mobileLoginBtn" class="btn btn-primary w-100">Login / Sign Up</button>`;

        const panelHTML = `
            <div class="panel-header d-flex justify-content-between align-items-center">
                <a href="/"><img src="/images/logo.svg" alt="Vidyari Logo" style="height:32px"></a>
            </div>
            <div class="panel-body">
                ${userSection}
                ${isLoggedIn ? '<hr class="panel-divider">' : ''}
                <div class="panel-nav-section">${createLinksHTML(navLinks)}</div>
                ${isLoggedIn ? `
                <hr class="panel-divider">
                <div class="panel-nav-section">${createLinksHTML(accountLinks)}</div>` : ''}
            </div>
            <div class="panel-footer">${footerSection}</div>`;
        
        mobileNavPanel.innerHTML = panelHTML;
    
        if (!isLoggedIn) {
            document.getElementById('mobileLoginBtn').addEventListener('click', () => window.location.href = '/user-login');
        }
    }

    const toggleMobileNav = () => {
        const isOpen = mobileNavPanel.classList.toggle('is-open');
        navOverlay.classList.toggle('is-open');
        hamburgerBtn.classList.toggle('is-open');
        document.body.style.overflow = isOpen ? 'hidden' : '';
    };

    // RESTORED: Grip Menu functionality
    function setupGripMenu() {
        if (!gripButton) return;
        gripButton.addEventListener('click', (e) => {
            e.stopPropagation();
            gripMenu.classList.toggle('is-open');
        });
        document.addEventListener('click', (e) => {
            if (!gripContainer.contains(e.target) && gripMenu.classList.contains('is-open')) {
                gripMenu.classList.remove('is-open');
            }
        });
    }

    // --- Event Listeners & Initial Setup ---
    hamburgerBtn.addEventListener('click', toggleMobileNav);
    navOverlay.addEventListener('click', toggleMobileNav);
    document.getElementById('loginBtn').addEventListener('click', () => window.location.href = '/user-login');
    document.getElementById('becomeSellerBtn').addEventListener('click', () => window.location.href = '/dashboard');

    updateUserUI();
    populateMobileNav();
    setupGripMenu(); // Activate the grip menu
});
</script>

</body>
