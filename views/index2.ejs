<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    .card.card--big {
  width: 320px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  overflow: hidden;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  cursor: pointer;
}

.card.card--big:hover {
  transform: translateY(-8px);
  box-shadow: 0 16px 32px rgba(0,0,0,0.2);
}

.card__cover {
  display: block;
  width: 100%;
  height: auto;
}

.card__cover img {
  width: 100%;

  object-fit: cover;
  transition: transform 0.3s ease;
}

.card__cover:hover img {
  transform: scale(1.05);
}

.card__rate {
  position: absolute;
  top: 12px;
  right: 12px;
  background-color: rgba(255, 215, 0, 0.9); /* golden */
  color: #222;
  font-weight: 700;
  font-size: 0.9rem;
  padding: 6px 10px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  gap: 6px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.2);
}

.card__rate svg {
  width: 16px;
  height: 16px;
  fill: #222;
}

.card__wrap {
  padding: 20px 24px 28px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card__title h3 {
  margin: 0 0 12px 0;
  font-weight: 700;
  font-size: 1.25rem;
  color: #111;
  line-height: 1.2;
}

.card__title h3 a {
  text-decoration: none;
  color: inherit;
  transition: color 0.25s ease;
}

.card__title h3 a:hover {
  color: #007bff;
}

.card__price {
  font-size: 1rem;
  color: #333;
  margin-bottom: 18px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.card__price span {
  font-weight: 700;
  font-size: 1.25rem;
  color: #27ae60; /* green for discounted price */
}

.card__price s {
  color: #aaa;
  font-size: 1rem;
}

.card__price b {
  background: #e74c3c;
  color: white;
  font-size: 0.8rem;
  font-weight: 700;
  padding: 4px 8px;
  border-radius: 12px;
  text-transform: uppercase;
}

.card__actions {
  display: flex;
  gap: 16px;
}

.card__buy {
  flex-grow: 1;
  background-color: #007bff;
  border: none;
  color: white;
  font-weight: 700;
  font-size: 1rem;
  padding: 12px 0;
  border-radius: 12px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
}

.card__buy:hover {
  background-color: #0056b3;
}

.card__favorite {
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #e74c3c;
  transition: background-color 0.3s ease;
}

.card__favorite:hover {
  background-color: rgba(231, 76, 60, 0.1);
}

.card__favorite svg {
  width: 24px;
  height: 24px;
  stroke: #e74c3c;
  stroke-width: 32px;
  fill: none;
  stroke-linecap: round;
  stroke-linejoin: round;
}
 .pdf-card {
      width: 290px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      background: white;
      font-family: Arial, sans-serif;
    }
#toast {
      visibility: hidden;
      min-width: 200px;
      background-color: #4CAF50;
      color: white;
      text-align: center;
      border-radius: 4px;
      padding: 16px;
      position: fixed;
      z-index: 1000;
      left: 50%;
      bottom: 30px;
      font-size: 17px;
      transform: translateX(-50%);
    }
    .pdf-card__image {
      width: 100%;
      height: 200px;
      background: #f4f4f4;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .pdf-card__image img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    .pdf-card__body {
      padding: 12px 16px;
    }

    .pdf-card__title {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 6px;
    }

    .pdf-card__meta {
      font-size: 13px;
      color: #555;
    }

    .pdf-card__meta i {
      margin-right: 6px;
      color: #673ab7;
    }
</style>
<body>
   <div class="container py-4">
      <% data.forEach(file => { %>

				
            
  <div class="pdf-card">
  <div class="pdf-card__image">
    <img src="./images/page-1.jpg" alt="PDF Preview">
  </div>
  <div class="card__wrap">
					<div class="card__title">
						<h3><a href="details.html"><%= file.filename %></a></h3>
					</div>

					<div class="card__price">
						<span>₹<%= file.price %></span><s></s><b>30% OFF</b>
					</div>

					<div class="card__actions">
						<button class="card__buy" onclick="payNow()" type="button">Buy now</button>

						<button  class="card__favorite" type="button">
							<svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 512 512"><path d="M352.92,80C288,80,256,144,256,144s-32-64-96.92-64C106.32,80,64.54,124.14,64,176.81c-1.1,109.33,86.73,187.08,183,252.42a16,16,0,0,0,18,0c96.26-65.34,184.09-143.09,183-252.42C447.46,124.14,405.68,80,352.92,80Z" style="fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px"></path></svg>
						</button>
					</div>
				</div>
  <div class="pdf-card__body">
    <div class="pdf-card__title">
      <i class="fas fa-file-pdf"></i> Binary Brains.pdf
    </div>
    <div class="pdf-card__meta">
      <i class="fas fa-user-circle"></i> You created · 17 Sept 2024
    </div>
  </div>
    <% }); %>
    </div>
</div>
      
  <div id="toast">Payment successful!</div>        
</body>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function payNow() {
      fetch("/create-order", { method: "POST" })
        .then(res => res.json())
        .then(order => {
          const options = {
            key: "rzp_test_Z79OzrfOIHLO6K",
            amount: order.amount,
            currency: order.currency,
            order_id: order.id,
            name: "PDF Store",
            description: "Buy PDF",
            handler: function (response) {
              fetch("/verify-payment", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify(response),
              })
              .then(res => res.json())
              .then(data => {
                if (data.success) {
                  showToast("Payment successful!");
                } else {
                  showToast("Payment verification failed!");
                }
              });
            },
          };
          const rzp = new Razorpay(options);
          rzp.open();
        });
    }

    function showToast(message) {
      const toast = document.getElementById("toast");
      toast.textContent = message;
      toast.style.visibility = "visible";
      setTimeout(() => {
        toast.style.visibility = "hidden";
      }, 3000);
    }
  </script>
  
</html>